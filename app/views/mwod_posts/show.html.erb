<%- model_class = MwodPost -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @mwod_post.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @mwod_post.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @mwod_post.category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @mwod_post.description %></dd>
</dl>

<div>
	<div class="span5">
			<strong>Tags:</strong>
			<ul>
				<% @mwod_post.mwod_tags.each do |mwod_tag| %>
		  		<li><%= mwod_tag.tag %></li>		
					<%	end %>
			</ul>
		</div>

	<div class="span5">
		  <strong>Videos:</strong>
			<ul>
				<% @mwod_post.mwod_video_links.each do |link| %>
		  		<li><%= link_to link.link %></li>		
				<%	end %>
			</ul>
		</div>
	</div>
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mwod_posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mwod_post_path(@mwod_post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mwod_post_path(@mwod_post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
